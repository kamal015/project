<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDB76B"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity" >

    <TextView
        android:id="@+id/textViewoption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewoption4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:text="option1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewoption3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewoption4"
        android:layout_centerVertical="true"
        android:text="option3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewoption4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewoption1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="option2"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewoption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewoption3"
        android:layout_below="@+id/textViewoption3"
        android:layout_marginTop="52dp"
        android:text="option4"
        android:textSize="20dp" />

</RelativeLayout>